{
  "name": "@casablanca-css/core",
  "description": "Zero-Runtime CSS-in-JS powered by vite.",
  "version": "0.0.1",
  "author": "Tessei Kameyama <tkamenoko@vivaldi.net>",
  "bugs": "https://github.com/tkamenoko/casablanca-css/issues",
  "dependencies": {
    "@ampproject/remapping": "^2.3.0",
    "@babel/core": "^7.23.9",
    "@casablanca-css/utils": "^0.0.1",
    "happy-dom": "14.12.3",
    "source-map": "^0.7.4"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.18",
    "open-props": "^1.7.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "development": "./src/index.ts",
      "production": "./src/index.ts",
      "default": "./dist/lib/index.js"
    },
    "./package.json": "./package.json",
    "./vite": {
      "types": "./dist/lib/vite.d.ts",
      "development": "./src/vite/index.ts",
      "production": "./src/vite/index.ts",
      "default": "./dist/lib/vite.js"
    }
  },
  "homepage": "https://github.com/tkamenoko/casablanca-css#readme",
  "keywords": [
    "css",
    "css-in-js",
    "vite",
    "vite-plugin"
  ],
  "license": "MIT",
  "peerDependencies": {
    "vite": "^5.0.12"
  },
  "private": true,
  "repository": "tkamenoko/casablanca-css.git",
  "scripts": {
    "build": "wireit",
    "lint": "wireit",
    "test": "wireit",
    "types": "wireit"
  },
  "type": "module",
  "types": "dist/lib/index.d.ts",
  "wireit": {
    "build": {
      "dependencies": [
        "build:transpile",
        "build:copy",
        "build:package.json"
      ]
    },
    "build:transpile": {
      "command": "vite build",
      "files": [
        "./src/**/*.ts",
        "./tsconfig.json",
        "./vite.config.ts",
        "../utils/src/**/*.{ts,tsx}",
        "../utils/tsconfig.json",
        "../utils/vite.config.ts"
      ],
      "output": [
        "./dist/lib/**/*.{js,d.ts}"
      ]
    },
    "build:copy": {
      "command": "vite-node ./scripts/build/copy.ts",
      "files": [
        "./README.md",
        "../../LICENSE",
        "./scripts/build/copy.ts"
      ],
      "output": [
        "./dist/README.md",
        "./dist/LICENSE"
      ]
    },
    "build:package.json": {
      "command": "vite-node ./scripts/build/package.ts && syncpack format --source ./dist/package.json",
      "files": [
        "./package.json",
        "./scripts/build/package.ts"
      ],
      "output": [
        "./dist/package.json"
      ]
    },
    "lint": {
      "command": "biome check --apply ./",
      "files": [
        "./src/**/*.{ts,tsx}",
        "./vite.config.ts",
        "../../biome.json"
      ],
      "output": []
    },
    "test": {
      "command": "vitest run",
      "env": {
        "NODE_OPTIONS": "--experimental-vm-modules"
      },
      "files": [
        "./src/**/*.{ts,tsx}",
        "./tsconfig.json",
        "./vite.config.ts",
        "../utils/src/**/*.{ts,tsx}",
        "../utils/tsconfig.json",
        "../utils/vite.config.ts"
      ],
      "output": []
    },
    "types": {
      "command": "tsc --noEmit",
      "files": [
        "./src/**/*.{ts,tsx}",
        "./tsconfig.json",
        "./vite.config.ts",
        "../utils/src/**/*.{ts,tsx}",
        "../utils/tsconfig.json",
        "../utils/vite.config.ts"
      ],
      "output": []
    }
  }
}
