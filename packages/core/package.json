{
  "name": "@macrostyles/core",
  "description": "Zero-Runtime CSS-in-JS powered by vite.",
  "version": "0.0.1",
  "author": "Tessei Kameyama <tkamenoko@vivaldi.net>",
  "bugs": "https://github.com/tkamenoko/macrostyles/issues",
  "dependencies": {
    "@babel/core": "^7.23.9",
    "@macrostyles/utils": "0.0.1",
    "happy-dom": "^13.3.8"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.18",
    "polished": "^4.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "default": "./dist/vite.js"
    }
  },
  "homepage": "https://github.com/tkamenoko/macrostyles#readme",
  "license": "MIT",
  "module": "./dist/index.js",
  "peerDependencies": {
    "vite": "^5.0.12"
  },
  "repository": "tkamenoko/macrostyles.git",
  "scripts": {
    "build": "wireit",
    "lint": "wireit",
    "test": "wireit",
    "types": "wireit"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": ["dist/*.d.ts"]
    }
  },
  "wireit": {
    "build": {
      "command": "vite build",
      "dependencies": ["../utils:build"],
      "files": ["./src/**/*.ts", "./tsconfig.json", "./vite.config.ts"],
      "output": ["./dist/**/*.{js,d.ts}"]
    },
    "lint": {
      "command": "biome check --apply ./",
      "files": ["./src/**/*.{ts,tsx}", "./vite.config.ts"],
      "output": []
    },
    "test": {
      "command": "vitest run",
      "env": {
        "NODE_OPTIONS": "--experimental-vm-modules"
      },
      "dependencies": ["../utils:build"],
      "files": ["./src/**/*.{ts,tsx}", "./tsconfig.json", "./vite.config.ts"],
      "output": []
    },
    "types": {
      "command": "tsc --noEmit",
      "dependencies": ["../utils:build"],
      "files": ["./src/**/*.{ts,tsx}", "./tsconfig.json", "./vite.config.ts"],
      "output": []
    }
  }
}
