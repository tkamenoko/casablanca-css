{
  "name": "@casablanca/utils",
  "description": "Common utilities for casablanca-css.",
  "version": "0.0.1",
  "author": "Tessei Kameyama <tkamenoko@vivaldi.net>",
  "bugs": "https://github.com/tkamenoko/casablanca-css/issues",
  "dependencies": {
    "@babel/core": "^7.23.9"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5"
  },
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "development": "./src/index.ts",
      "production": "./src/index.ts",
      "default": "./dist/lib/index.js"
    }
  },
  "homepage": "https://github.com/tkamenoko/casablanca-css#readme",
  "license": "MIT",
  "peerDependencies": {
    "@casablanca/core": "0.0.1",
    "vite": "^5.0.12"
  },
  "repository": "tkamenoko/casablanca-css.git",
  "scripts": {
    "build": "wireit",
    "lint": "wireit",
    "test": "wireit",
    "types": "wireit"
  },
  "type": "module",
  "types": "dist/lib/index.d.ts",
  "wireit": {
    "build": {
      "dependencies": [
        "build:copy",
        "build:package.json",
        "build:transpile"
      ]
    },
    "build:transpile": {
      "command": "vite build",
      "files": [
        "./src/**/*.ts",
        "./tsconfig.json",
        "./vite.config.ts"
      ],
      "output": [
        "./dist/lib/**/*.{js,d.ts}"
      ]
    },
    "build:copy": {
      "command": "vite-node ./scripts/build/copy.ts",
      "files": [
        "./README.md",
        "../../LICENSE",
        "./scripts/build/copy.ts"
      ],
      "output": [
        "./dist/README.md",
        "./dist/LICENSE"
      ]
    },
    "build:package.json": {
      "command": "vite-node ./scripts/build/package.ts && syncpack format --source ./dist/package.json",
      "files": [
        "./package.json",
        "./scripts/build/package.ts"
      ],
      "output": [
        "./dist/package.json"
      ]
    },
    "test": {
      "command": "vitest run",
      "env": {
        "NODE_OPTIONS": "--experimental-vm-modules"
      },
      "files": [
        "./src/**/*.ts",
        "./tsconfig.json",
        "./vite.config.ts"
      ],
      "output": []
    },
    "lint": {
      "command": "biome check --apply ./",
      "files": [
        "./src/**/*.{ts,tsx}",
        "./vite.config.ts",
        "../../biome.json"
      ],
      "output": []
    },
    "types": {
      "command": "tsc --noEmit",
      "files": [
        "./src/**/*.{ts,tsx}",
        "./tsconfig.json",
        "./vite.config.ts"
      ],
      "output": []
    }
  }
}
