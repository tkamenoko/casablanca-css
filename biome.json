{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": ["**", "!**/node_modules/", "!**/dist/", "!**/package.json"]
  },
  "linter": {
    "rules": {
      "recommended": true,
      "complexity": {
        "noExcessiveCognitiveComplexity": "error",
        "useLiteralKeys": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "css": { "formatter": { "enabled": true } }
}
