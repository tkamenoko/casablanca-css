{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": ["node_modules/", "dist/", "package.json"]
  },
  "linter": {
    "rules": {
      "recommended": true,
      "complexity": {
        "noExcessiveCognitiveComplexity": "error",
        "useLiteralKeys": "off"
      },
      "nursery": {
        "useImportType": "error",
        "useNodejsImportProtocol": "error",
        "useGroupedTypeImport": "error",
        "useExportType": "error"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  }
}
