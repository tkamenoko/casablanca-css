{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "@styled/typescript-styled-plugin",
        "validProperties": ["composes"]
      }
    ],
    "paths": {
      "#@/*": ["./src/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["**/*.ts"]
}
