{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "paths": {
      "#@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "@styled/typescript-styled-plugin",
        "validProperties": ["composes"]
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["vite/client"]
  },
  "include": ["./src/**/*"]
}
