{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "isolatedModules": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "@styled/typescript-styled-plugin",
        "validProperties": ["composes"]
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["**/*.ts"]
}
